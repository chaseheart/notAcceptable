@charset "UTF-8";

#app {
	width: 1200px;
	margin: 20px auto;
}

.form-box {
	margin: 10px auto;
}

.form-info {
	margin-left: 5px;
}

.ivu-form .ivu-form-item-label {
	font-weight: bolder;
	font-size: 14px;
}

.ivu-divider-inner-text {
	font-size: 20px;
}

.text-in {
	text-indent: 2em;
}

/* 图片 */
.demo-upload-list {
	display: inline-block;
	width: 60px;
	height: 60px;
	text-align: center;
	line-height: 60px;
	border: 1px solid transparent;
	border-radius: 4px;
	overflow: hidden;
	background: #fff;
	position: relative;
	box-shadow: 0 1px 1px rgba(0, 0, 0, .2);
	margin-right: 4px;
}

.demo-upload-list img {
	width: 100%;
	height: 100%;
}

.demo-upload-list-cover {
	display: none;
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	background: rgba(0, 0, 0, .6);
}

.demo-upload-list:hover .demo-upload-list-cover {
	display: block;
}

.demo-upload-list-cover i {
	color: #fff;
	font-size: 20px;
	cursor: pointer;
	margin: 0 2px;
}