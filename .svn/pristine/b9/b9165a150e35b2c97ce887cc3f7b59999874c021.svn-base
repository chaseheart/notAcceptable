.select-btn {
	line-height: 1.5px;
	cursor: pointer;
	text-align: left;
}

.select-btn.place-holder span {
	color: #bbbbbb;
}

.select-btn .select-value {
	display: inline-block;
	width: 50%;
	text-align: left;
}

.select-btn .right {
	display: inline-block;
	width: calc(50% - 5px);
	text-align: right;
	color: #bbbbbb;
}

.dropdown-box {
	width: 100%;
	position: relative;
}

.dropdown-box .dropdown-menu {
	width: 100%;
	padding: 0px;
	border: 0px;
	box-shadow: 0px 3px 3px 1px #d9d9d9;
}

.dropdown-box .dropdown-item {
	padding: 1rem 1.5rem;
}

.dropdown-box .dropdown-menu .dropdown-item:hover {
	background: #E6F7FF;
	font-weight: 900;
}

.search-header {
	margin-left: 23px;
	width: 25%;
	margin-top: 6px;
}

.clear-time {
	position: absolute;
	right: 0;
	top: 0;
	line-height: 32px;
}

.table>thead>tr {
	color: #707070;
	font-weight: 400;
	background: repeat-x #F2F2F2;
	background-image: -webkit-linear-gradient(top, #F8F8F8 0, #ECECEC 100%);
	background-image: -o-linear-gradient(top, #F8F8F8 0, #ECECEC 100%);
	background-image: linear-gradient(to bottom, #F8F8F8 0, #ECECEC 100%);
}

.ant-pagination-item.page-item {
	padding: 0px 10px;
}

.input-page-div {
	display: inline-block;
}

.input-page-div input {
	width: 50px;
	text-align: center;
}

.input-page-div select {
	width: 100px;
}

.infor-div-in {
	margin: 10px 30px;
}

#pagination {
	float: right;
	margin-bottom: 15px;
}

#pagination .dropdown-box {
	vertical-align: middle;
	display: inline-block;
	width: 130px;
}

#pagination .select-btn {
	line-height: 24px
}

.alert {
	margin-bottom: 5px !important;
}

/* 遮罩层 */
.bg {
	position: fixed;
	height: 100%;
	width: 100%;
	left: 0px;
	top: 0px;
	z-index: 100;
	background: #00000059;
	display: none;
}

body {
	background-color: #fff;
}
/**lzx输入框圆角**/
.input-box {
	border-radius: 5px !important;
}

h1 {
	margin-left: 8px;
}

#alert-box .alert {
	margin-top: 10px;
	left: 50%;
	z-index: 9999;
	width: 500px;
	position: absolute;
	margin-left: -250px;
}

.ivu-breadcrumb {
	padding: 8px 15px;
	margin-bottom: 20px;
	background-color: #f5f5f5;
	border-radius: 4px;
}

.ivu-tag {
	margin-top: 0px;
}

.link-error {
	color: #ed4014;
}

.link-error:hover {
	color: #f16643;
}

.link-error:active {
	color: #e13d13;
}

.text-error {
	color: #ed4014;
}

.image-box {
	text-align: center;
	margin-top:150px;
}