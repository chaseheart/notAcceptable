@charset "UTF-8";

* {
	/* font-family: '微软雅黑', 'PingFangSC-Regular', 'PingFang SC'; */
	font-size: 14px;
	font-family: "Helvetica Neue", Helvetica, "PingFang SC",
		"Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", Arial, sans-serif;
}

/* 非空字段 */
.not-null {
	color: red;
	vertical-align: middle;
	margin-top: 2px;
	margin-left: 2px;
	margin-right: 2px;
}

::-webkit-scrollbar {
	width: 6px;
	height: 6px;
}

::-webkit-scrollbar-track {
	border-radius: 10px;
	background: rgba(0, 0, 0, 0.2);
}

::-webkit-scrollbar-thumb {
	border-radius: 10px;
	background: rgba(0, 0, 0, 0.5);
}

/* 排序 */
.sort {
	color: #cdcdcd;
	position: absolute;
	margin-left: 5px;
	margin-top: 3px;
}

/* 选中的排序 */
.sort.active {
	color: #333;
}

/* 排序按钮 */
.sort-btn {
	position: relative;
	padding-right: 20px;
	background: #ffffff !important;
}

/* 表格thead的排序箭头 */
.table-sort {
	position: relative;
	display: none;
}

/* 模态框共通部分 */
.modal-box {
	background: #ffffff;
	box-shadow: 0 0 15px 0px #0000008f;
	position: fixed;
	left: 50%;
	top: 50%;
	border-radius: 8px;
	z-index: 101;
	display: none;
}

.modal-header {
	background: #4f8cb8;
	color: #ffffff;
	font-size: 16px;
}

.modal-header .close {
	text-shadow: none;
	color: #f0f8ff;
	font-size: 20px;
	margin-top: 0px;
}

.modal-body {
	padding: 5%;
}

.modal-footer {
	background: #edf0f5;
	border-top: 1px solid #ccc;
	position: absolute;
	bottom: 0px;
	width: 100%;
	border-bottom-right-radius: 8px;
	border-bottom-left-radius: 8px;
}

