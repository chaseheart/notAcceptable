@charset "UTF-8";

#app {
	width: 1500px;
	margin: 20px auto;
}

.form-box {
	margin: 10px auto;
}

.form-info {
	margin-left: 5px;
}

.ivu-form .ivu-form-item-label {
	font-weight: bolder;
	font-size: 14px;
}

.ivu-divider-inner-text {
	font-size: 20px;
}

.ivu-date-picker {
	width: 100%;
}

.result-table {
	margin: 10px 0px;
	border-color: #BCD4E5;
	width:560px;
}

.result-table table {
	width: auto !important;
}

.result-table table thead tr th {
	background-color: #ECF2F7 !important;
	color: #8090A0;
	border-color: #BCD4E5;
	height: 20px;
}

.result-table table tbody td {
	border-color: #BCD4E5;
	cursor: pointer;
	text-align: left;
	vertical-align: top;
	padding-top: 9px;
	height:80px;
}

.result-table table tbody td:hover {
	opacity: .85;
}

.last-month {
	color: #c5c8ce;
}

.selected {
	background-color: #e6f7ff !important;
	color: #1890ff !important;
}