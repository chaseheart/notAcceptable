@charset "UTF-8";

#app {
	width: 1500px;
	margin: 20px auto;
}

.form-box {
	margin: 10px auto;
}

.ivu-form .ivu-form-item-label {
	font-weight: bolder;
	font-size: 14px;
}

.form-info {
	margin-left: 5px;
}

.ivu-divider-inner-text {
	font-size: 20px;
}

/* .ivu-table-tip td{
	width:100% !important;
} */
.result-list table {
	width: auto !important;
}

.result-list table .ivu-table-cell {
	padding-left: 5px;
	padding-right: 5px;
}

.result-list table thead tr th:not(.no-hide):first-child,.result-list table tbody tr td:not(.no-hide):first-child{
	display:none;
}

.apply-list table {
	width: auto !important;
}
.apply-list th:nth-child(2),.apply-list td:nth-child(2),.apply-list th:nth-child(3),.apply-list td:nth-child(3){
	display:none;
}
.apply-list .table-col-6{
	width:15%;
}

.table-col-1 {
	width: 4%;
}

.table-col-3 {
	width: 8%;
}

.table-col-5 {
	width: 10%;
}

.ivu-poptip-body-content a {
	display: block;
}

table .ivu-tag-text{
	color:#ffffff;
	font-weight:bolder;
}